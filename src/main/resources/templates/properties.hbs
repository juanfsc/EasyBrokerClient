<!DOCTYPE html>
<html>
    {{>head.hbs}}
    <body>
        `<ul class="pagination">
            <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
            {{#each pages}}
                <li class="active"><a href="/properties/page/{{page}}">{{page}}</a></li>
            {{/each}}
            <li class="waves-effect"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
        </ul>
        <table>
            <thead>
            <tr>
                <th>Public ID</th>
                <th>Title</th>
                <th>Property type</th>
                <th>Location</th>
                <th>Image thumbnail</th>
            </tr>
            </thead>
            <tbody>
            {{#each properties}}
                <tr>
                    <td><a href="/property/{{publicID}}">{{publicID}}   </a></td>
                    <td>{{title}}</td>
                    <td>{{type}}</td>
                    <td>{{location}}</td>
                    <td><img src="{{thumbnail}}" width="200px"></img></td>
                </tr>
            {{/each}}
            </tbody>
        </table>`
        <!--JavaScript at end of body for optimized loading-->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
        <script src="/js/main.js"></script>
    </body>
</html>